{
    "name": "Apache CMS Extension",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Simple extension to simplify usage of Apache CMS",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "Edit current page within Apache CMS"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["tabs", "https://*.apache.org/", "http://*.apache.org/"]
}